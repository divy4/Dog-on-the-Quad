<resources>

    <!-- Base application theme. -->


    <style name="AppThemenobackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="android:textColorTertiary">#000</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
    </style>


    <style name="AppThemenobutton" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:textColorSecondary">#000</item>
        <item name="android:textColorTertiary">#000</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/rounded_button_corners</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar">
        <item name="android:progressTint">@color/colorAccent</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">20dp</item>
    </style>





</resources>
